<section class='gradient homepage-gradient spacer-lg'>
	<h2 class='secondary-header text-center white-text'>User Login</h2>
	<div class='login tile white-tile'>
		<div class='form login-form'>
			<div class='form-group'>
				<div>
					<label for='email-login' class='email-login'>Email:</label>
				</div>
				<input class='form-input' type='text' id='email-login' />
			</div>
			<div class='form-group'>
				<div>
					<label for='password-login' class='password-login'>Password:</label>
				</div>
				<input class='form-input' type='password' id='password-login' />
			</div>
			<div class='login-btn-container'>
				<button
					class='btn-block--primary'
					id='login'
					type='submit'
				>Login</button>
			</div>
		</div>
		<h3 class='text-center spacer-sm signup'>Dont have an account? Sign up!</h3>
		<div class=''>
			<div class='form signup-form spacer-sm'>
				<div class='form-group'>
					<div>
						<label
							for='username-signup'
							class='username-signup'
						>Username:</label>
					</div>
					<input class='form-input' type='text' id='username-signup' />
				</div>
				<div class='form-group'>
					<div>
						<label for='email-signup' class='email-signup'>Email:</label>
					</div>
					<input class='form-input' type='text' id='email-signup' />
				</div>
				<div class='form-group'>
					<div>
						<label
							for='password-signup'
							class='password-signup'
						>Password:</label>
					</div>
					<input class='form-input' type='password' id='password-signup' />
				</div>

				<div class='login-btn-container'>
					<button
						class='btn btn-block--submit'
						id='sign-up'
						type='submit'
					>Login</button>

				</div>
			</div>
		</div>
	</div>

</section>

<script src='./js/login.js'></script>

