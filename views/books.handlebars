<section class="container">
  <h3>{{books.title}}</h3>
  <h4>By {{books.author}}</h4>
  <!-- If the user is logged in, render the books info -->
  {{#if logged_in}}
  <section class="flex-row justify-center">
    <h4>ISBN: {{books.isbn}} </h4>
    <h4>Published: {{books.publish_date}} </h4>
    <h4>Genre: {{books.subjects}} </h4>
  </section>
</section>
<button type="submit" id="deleteEntry" class="btn btn-primary col-sm-2 deletebtn">Delete Book Entry</button> <h4 id="isbnValue">{{books.isbn}}</h4>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">Login to see additional information on this title</a>
{{/if}}

<script src="./js/delete.js"></script>




